<!-- views/account/management.ejs -->
<%- include('partials/header') %>

    <!-- Flash Messages -->
    <% if (locals.flash && locals.flash.notice) { %>
        <div class="flash-messages">
            <div class="alert alert-success">
                <%= flash.notice %>
            </div>
        </div>
        <% } %>

            <% if (locals.flash && locals.flash.error) { %>
                <div class="flash-messages">
                    <div class="alert alert-danger">
                        <%= flash.error %>
                    </div>
                </div>
                <% } %>

                    <!-- Account Management Content -->
                    <div class="account-container">
                        <h1>Account Management</h1>
                        <div class="welcome-message">
                            <p>You're logged in!</p>
                        </div>

                        <!-- Add user info if available -->
                        <% if (locals.account) { %>
                            <div class="account-info">
                                <p><strong>Welcome, <%= account.account_firstname %>
                                            <%= account.account_lastname %>!</strong></p>
                                <p>Email: <%= account.account_email %>
                                </p>
                                <p>Account Type: <%= account.account_type %>
                                </p>
                            </div>
                            <% } else if (locals.loggedin) { %>
                                <!-- Alternative if using session-based auth -->
                                <div class="account-info">
                                    <p><strong>Welcome back!</strong></p>
                                </div>
                                <% } %>

                                    <!-- You can add more account management features here later -->
                                    <div class="account-actions">
                                        <h3>Account Actions</h3>
                                        <ul>
                                            <li><a href="/account/update">Update Profile</a></li>
                                            <li><a href="/account/change-password">Change Password</a></li>
                                            <li><a href="/logout">Logout</a></li>
                                        </ul>
                                    </div>
                    </div>

                    <%- include('partials/footer') %>