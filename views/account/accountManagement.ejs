<div class="account-container">
    <h1>
        <%= title %>
    </h1>

    <% if (messages && messages.notice) { %>
        <div class="notice bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded relative mb-4"
            role="alert">
            <p>
                <%= messages.notice %>
            </p>
        </div>
        <% } %>

            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <p class="text-lg mt-6 text-green-700 font-semibold">
                        You're logged in!
                    </p>

                    <div class="mt-8">
                    </div>
</div>